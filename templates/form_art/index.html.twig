{# templates/form_art/index.html.twig #}
{% extends 'base.html.twig' %}

{% block formart_css %}
    <link rel="stylesheet" href="{{ asset('css/formart.css') }}">
{% endblock %}

{% block title %}Ajouter une création{% endblock %}

{% block body %}
    <div class="containerformart">
        <h1>Ajouter une création</h1>
        
        {{ form_start(form, {'attr': {'id': 'formajout'}}) }}
            <ul class="formartul">
                <li class="formartli">
                    {{ form_label(form.nom) }}<br>
                    {{ form_widget(form.nom) }}
                </li>
                <li class="formartli">
                    {{ form_label(form.taille) }}<br>
                    {{ form_widget(form.taille) }}
                </li>
                <li class="formartli">
                    {{ form_label(form.prix) }}<br>
                    {{ form_widget(form.prix) }}
                </li>
                <li class="formartli">
                    {{ form_label(form.description) }}<br>
                    {{ form_widget(form.description) }}
                </li>
                <li class="formartli">
                    {{ form_label(form.image_path) }}<br>
                    {{ form_widget(form.image_path) }}
                </li>
            </ul>
            <div class="button">
                <button type="submit">Ajouter</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}